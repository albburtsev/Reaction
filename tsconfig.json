{
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": ".",
    "rootDirs": [
      "src/"
    ],
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react"
  },
  "include": [
    "./src/**/*.ts",
    "./src/components/**/*.tsx"
  ]
}
